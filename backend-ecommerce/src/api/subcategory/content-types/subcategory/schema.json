{
  "kind": "collectionType",
  "collectionName": "subcategories",
  "info": {
    "singularName": "subcategory",
    "pluralName": "subcategories",
    "displayName": "Subcategory",
    "description": "Subcategorías para organizar productos dentro de categorías principales"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "subcategoryName": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "subcategoryName"
    },
    "icon": {
      "type": "string",
      "default": "Package"
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "subcategories"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  }
}
